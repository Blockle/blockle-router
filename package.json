{
  "name": "@blockle/router",
  "version": "2.0.0-alpha.3",
  "description": "Blockle React Router",
  "scripts": {
    "build:ts": "rollup -c",
    "build:types": "tsc -d --emitDeclarationOnly",
    "build": "rm -rf ./dist/ && npm run build:ts && npm run build:types",
    "format": "prettier --write \"**/*\"",
    "lint": "eslint -p tsconfig.json",
    "start": "npm run build:ts -- -w | npm run build:types -- -w",
    "test": "jest",
    "start:test": "jest --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "files": [
    "dist"
  ],
  "main": "dist/blockle-router.js",
  "module": "dist/blockle-router.esm.js",
  "types": "dist/index.d.ts",
  "repository": "git@github.com:Blockle/blockle-router.git",
  "author": "Niek Saarberg",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.2",
    "@types/history": "^4.7.2",
    "@types/jest": "^26.0.19",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "history": "^5.0.0",
    "husky": "^4.3.5",
    "jest": "^26.6.3",
    "postcss-import": "^13.0.0",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "rollup": "^2.34.2",
    "rollup-plugin-commonjs": "^10.0.1",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-postcss": "^4.0.0",
    "rollup-plugin-typescript2": "^0.29.0",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.2"
  },
  "peerDependencies": {
    "history": "^5.0.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "dependencies": {
    "path-to-regexp": "^6.2.0"
  }
}
