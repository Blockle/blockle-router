{
  "name": "@blockle/router",
  "version": "3.0.0-alpha.1",
  "description": "Blockle React Router",
  "scripts": {
    "build:ts": "rollup -c",
    "build:types": "tsc -d --emitDeclarationOnly",
    "build": "rm -rf ./dist/ && npm run build:ts && npm run build:types",
    "format": "prettier --write \"**/*\"",
    "lint": "eslint -p tsconfig.json",
    "start": "npm run build:ts -- -w | npm run build:types -- -w",
    "test": "jest",
    "start:test": "jest --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "files": [
    "dist"
  ],
  "main": "dist/blockle-router.js",
  "module": "dist/blockle-router.esm.js",
  "types": "dist/index.d.ts",
  "repository": "git@github.com:Blockle/blockle-router.git",
  "author": "Niek Saarberg",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^11.2.7",
    "@types/history": "^4.7.2",
    "@types/jest": "^26.0.23",
    "@types/react": "^17.0.11",
    "@types/react-dom": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^4.27.0",
    "@typescript-eslint/parser": "^4.27.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "history": "^5.0.0",
    "husky": "^4.3.5",
    "jest": "^27.0.4",
    "prettier": "^2.3.1",
    "pretty-quick": "^3.1.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rollup": "^2.52.1",
    "rollup-plugin-commonjs": "^10.0.1",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-typescript2": "^0.30.0",
    "ts-jest": "^27.0.3",
    "typescript": "^4.1.2"
  },
  "peerDependencies": {
    "history": "^5.0.0",
    "react": ">= 16.x",
    "react-dom": ">= 16.x"
  },
  "dependencies": {
    "path-to-regexp": "^6.2.0"
  }
}
