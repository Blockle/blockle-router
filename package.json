{
  "name": "@blockle/router",
  "version": "1.2.2",
  "description": "Blockle React Router",
  "scripts": {
    "build:ts": "rollup -c",
    "build:types": "tsc -d --emitDeclarationOnly",
    "build": "rm -rf ./dist/ && npm run build:ts && npm run build:types",
    "format": "prettier --write \"**/*\"",
    "lint": "eslint -p tsconfig.json",
    "start": "npm run build:ts -- -w | npm run build:types -- -w",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "files": [
    "dist"
  ],
  "main": "dist/blockle-router.js",
  "module": "dist/blockle-router.esm.js",
  "types": "dist/index.d.ts",
  "repository": "git@github.com:Blockle/blockle-router.git",
  "author": "Niek Saarberg",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/jest-dom": "^4.0.0",
    "@testing-library/react": "^8.0.7",
    "@types/history": "^4.7.2",
    "@types/jest": "^24.0.16",
    "@types/react": "^16.8.23",
    "@types/react-dom": "^16.8.5",
    "eslint-plugin-prettier": "^3.1.0",
    "history": "^4.9.0",
    "husky": "^3.0.4",
    "jest": "^24.8.0",
    "postcss-import": "^12.0.1",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "rollup": "^1.17.0",
    "rollup-plugin-commonjs": "^10.0.1",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-typescript2": "^0.22.1",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.3"
  },
  "peerDependencies": {
    "history": "^4.7.2",
    "react": "^16.7.0",
    "react-dom": "^16.7.0"
  },
  "dependencies": {
    "path-to-regexp": "^2.4.0"
  }
}
